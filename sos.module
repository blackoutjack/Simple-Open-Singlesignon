/**
 * Implementation of hook_boot().
 *
 * Retrieve or set up the SOS session id to be shared across SOS sites.
 *
 * This runs on all domains where the SOS module is enabled, so there are different execution paths
 * for a number of scenarios.
 *
 * 1. The first time a user (browser session) has accessed any page, a sos_sid will be established.
 * 2. When a user visits the login page on domain A, the sos_sid is passed via a GET parameter 
 *		to the other sites (see sos_form_alter@user_login).
 * 3. After logging in, a user visiting any site in the federation will present the sos_sid cookie
 *		that it already has, and the site will have associated this with the user through back-channel
 *		communication amongst the sites.
 *	
 * 
 */
function sos_boot() {
	$enabled = variable_get('sos_enabled', false);
	if (!$enabled) return;

	// Add P3P Compact Policy (necessary for IE thirdparty Cookies)
	header('P3P: CP="IDC DSP COR ADM DEVi TAIi PSA PSD IVAi IVDi CONi HIS OUR IND CNT"');

	$sid = session_id();
	sess_write($sid, serialize($_SESSION));
	$sos_sid = _sos_get_sos_sid();

	// If sos_sid is empty, there was an error during reconsiliation.
	if (empty($sos_sid)) return;

	$sos_token = _sos_get_sos_session_token($sos_sid);

	// Get the current domain id.
	// %%% move this stuff into sos.util.inc, and implement hmac checking
	$thisdom = domain_get_domain();
	$domain_id = $thisdom['domain_id'];

	// Update the database to allow the server to recognize session.
	db_query("UPDATE {sessions} SET sos_sid='%s',domain='%s' WHERE sid='%s'", $sos_sid, $domain_id, $sid);
	//watchdog('sos',"update {sessions} set sos_sid='%s',domain='%s' where sid='%s'", array($sos_sid,$domain_id,$sid), WATCHDOG_NOTICE);

	// Create and set the SOS cookie to allow the browser to recognize session.
	// Examine the normal session cookie to match most of its parameters.
	$sess_cookie = session_get_cookie_params();
	$cookie_domain = $sess_cookie['domain'];
	$lifetime = $sess_cookie['lifetime'];
	// Allow debugging, but otherwise this needs to be a secure cookie.
	$secure = FORCE_SSL;
	// %%% Restrict root URI based on Drupal setup.
	$root_uri = '/';
	setcookie(SOS_SESSION_COOKIE_PREFIX.$sos_token, $sos_sid, $lifetime, $root_uri, $cookie_domain, $secure);
}

/**
 * Implementation of hook_exit().
 */
function sos_exit() {
	global $base_root;
	$this_page = request_uri();

	$pages = array('sos/logo');	
	foreach ($pages as $page) {
		if ($page && strstr($this_page, $page) !== FALSE) {
			cache_clear_all($base_root . $this_page, 'cache_page');
			return;
		}
	}
}


